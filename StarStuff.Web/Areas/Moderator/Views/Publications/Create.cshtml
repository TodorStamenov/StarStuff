@model PublicationFormViewModel

@{
    ViewData["Title"] = $"Add Publication from {Model.JournalName}";
}

<div class="row">
    <div class="col-md-offset-2 col-md-6">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div class="form-group">
                <label asp-for="Publication.Title"></label>
                <input asp-for="Publication.Title" class="form-control" />
                <span asp-validation-for="Publication.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publication.Content"></label>
                <textarea asp-for="Publication.Content" class="form-control" rows="20"></textarea>
                <span asp-validation-for="Publication.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscoveryId"></label>
                <select asp-for="DiscoveryId" asp-items="@Model.Discoveries" class="form-control"></select>
                <span asp-validation-for="DiscoveryId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save Publication</button>
        </form>

        @section Scripts {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }
    </div>
</div>