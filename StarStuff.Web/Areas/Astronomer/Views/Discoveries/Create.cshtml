@model DiscoveryFormViewModel
@{
    ViewData["Title"] = "Add Discovery";
}

<div class="row">
    <h2>@ViewData["Title"]</h2>
    <div class="col-md-4">
        <form method="post">
            <hr />
            <div class="form-group">
                <label asp-for="Discovery.StarSystem"></label>
                <input asp-for="Discovery.StarSystem" class="form-control" />
                <span asp-validation-for="Discovery.StarSystem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelescopeId"></label>
                <select asp-for="TelescopeId" asp-items="@Model.Telescopes" class="form-control" rows="20"></select>
                <span asp-validation-for="TelescopeId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save Discovery</button>
        </form>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</div>