@model IEnumerable<ListDiscoveriesServiceModel>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Star System</th>
            <th>Distance</th>
            <th class="text-center">Stars</th>
            <th class="text-center">Planets</th>
            <th class="text-center">Is Confirmed</th>
            <th class="text-center">Has Publication</th>
            <th>Date Made</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var discovery in Model)
        {
            <tr>
                <td>@discovery.StarSystem</td>
                <td>@discovery.Distance</td>
                <td class="text-center">@discovery.Stars</td>
                <td class="text-center">@discovery.Planets</td>
                <td class="text-center">
                    @if (discovery.IsConfirmed)
                    {
                        <span class="glyphicon glyphicon-ok text-success"></span>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-remove text-danger"></span>
                    }
                </td>
                <td class="text-center">
                    @if (discovery.HasPublication)
                    {
                        <span class="glyphicon glyphicon-ok text-success"></span>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-remove text-danger"></span>
                    }
                </td>
                <td>@discovery.DateMade.ToShortDateString()</td>
                <td>
                    <a class="btn btn-primary" asp-area="Astronomer" asp-controller="Discoveries" asp-action="Details" asp-route-id="@discovery.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>