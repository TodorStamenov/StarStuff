@model ListDiscoveriesViewModel

@{
    ViewData["Title"] = $"All {(Model.Confirmed == null ? string.Empty : Model.Confirmed.Value ? "Confirmed " : "Unconfirmed ")}Discoveries";
    string previouseDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    string nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<div class="row">
    <h2>@ViewData["Title"]</h2>
    <a class="btn btn-primary" asp-area="Astronomer" asp-controller="Discoveries" asp-action="All">All</a>
    <a class="btn btn-primary" asp-area="Astronomer" asp-controller="Discoveries" asp-action="All" asp-route-confirmed="true">Confirmed</a>
    <a class="btn btn-primary" asp-area="Astronomer" asp-controller="Discoveries" asp-action="All" asp-route-confirmed="false">Unconfirmed</a>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Star System</th>
                <th>Stars</th>
                <th>Planets</th>
                <th>Is Confirmed</th>
                <th>Date Made</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var discovery in Model.Discoveries)
            {
                <tr>
                    <td>@discovery.StarSystem</td>
                    <td>@discovery.Stars</td>
                    <td>@discovery.Planets</td>
                    <td>
                        @if (discovery.IsConfirmed)
                        {
                            <span class="glyphicon glyphicon-ok text-success"></span>
                        }
                        else
                        {
                            <span class="glyphicon glyphicon-remove text-danger"></span>
                        }
                    </td>
                    <td>@discovery.DateMade.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-primary" asp-area="Astronomer" asp-controller="Discoveries" asp-action="Details" asp-route-id="@discovery.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (Model.Discoveries.Any())
{
    <div class="row">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link @previouseDisabled" asp-area="Astronomer" asp-controller="Discoveries" asp-action="All" asp-route-page="@Model.PrevPage" asp-route-confirmed="@Model.Confirmed" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)">
                    <a class="page-link @(Model.CurrentPage == i ? "disabled" : string.Empty)" asp-area="Astronomer" asp-controller="Discoveries" asp-action="All" asp-route-page="@i" asp-route-confirmed="@Model.Confirmed">@i</a>
                </li>
            }
            <li class="page-item">
                <a class="page-link @nextDisabled" asp-area="Astronomer" asp-controller="Discoveries" asp-action="All" asp-route-page="@Model.NextPage" asp-route-confirmed="@Model.Confirmed" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </div>
}