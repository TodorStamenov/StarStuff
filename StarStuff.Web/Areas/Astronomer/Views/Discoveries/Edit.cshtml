@model DiscoveryFormServiceModel
@{
    ViewData["Title"] = "Edit Discovery";
}

<div class="row">
    <div class="col-md-offset-2 col-md-4">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div class="form-group">
                <label asp-for="StarSystem"></label>
                <input asp-for="StarSystem" class="form-control" />
                <span asp-validation-for="StarSystem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Distance"></label>
                <input asp-for="Distance" class="form-control" />
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save Discovery</button>
        </form>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</div>