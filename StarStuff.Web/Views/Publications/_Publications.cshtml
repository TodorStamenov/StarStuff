@model IEnumerable<ListPublicationsServiceModel>

@foreach (var publication in Model)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                <a asp-area="" asp-controller="Publications" asp-action="Details" asp-route-id="@publication.Id">@publication.StarSystemName</a>
                Star System
                @if (User.IsInRole(WebConstants.ModeratorRole))
                {
                    <a asp-area="Moderator" asp-controller="Publications" asp-action="Edit" asp-route-id="@publication.Id" class="btn btn-warning btn-xs pull-right">Edit</a>
                }
            </h3>
        </div>
        <div class="panel-body">
            <div>
                @publication.Content.Slice(800)
            </div>
            <div class="pull-right">@publication.CommentsCount @(publication.CommentsCount == 1 ? "Comment" : "Comments")</div>
        </div>
    </div>
}